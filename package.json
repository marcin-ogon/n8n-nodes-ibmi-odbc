{
  "name": "n8n-nodes-ibmi-odbc",
  "version": "0.1.0",
  "description": "n8n community node to run SQL and CL commands on IBM i via ODBC",
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcin-ogon/n8n-nodes-ibmi-odbc.git"
  },
  "keywords": [
    "n8n",
    "n8n-community-node",
    "ibmi",
    "as400",
    "odbc",
    "sql",
    "cl"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig.build.json && cp -f src/nodes/IbmIOdbc/*.png dist/nodes/IbmIOdbc/ 2>/dev/null || true",
    "dev": "tsc -w -p tsconfig.build.json",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev:n8n": "npm run build && N8N_CUSTOM_EXTENSIONS=dist npx n8n",
    "dev:n8n:watch": "(npm run dev &) && sleep 2 && N8N_CUSTOM_EXTENSIONS=dist npx n8n",
    "release:patch": "node scripts/release.mjs patch",
    "release:minor": "node scripts/release.mjs minor",
    "release:major": "node scripts/release.mjs major"
  },
  "engines": {
    "node": ">=18"
  },
  "n8n": {
    "nodes": [
      {
        "type": "n8n-nodes-ibmi-odbc/dist/nodes/IbmIOdbc/IbmIOdbc.node.js",
        "sourcePath": "src/nodes/IbmIOdbc/IbmIOdbc.node.ts"
      }
    ],
    "credentials": [
      {
        "type": "n8n-nodes-ibmi-odbc/dist/credentials/IbmiOdbc.credentials.js",
        "sourcePath": "src/credentials/IbmiOdbc.credentials.ts"
      }
    ],
    "n8nNodesApiVersion": 1
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "prettier": "^3.3.3",
    "n8n": "1.109.2",
    "eslint": "^9.34.0",
    "n8n-core": "1.108.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "odbc": "^2.4.7",
    "n8n-workflow": "1.106.0"
  }
}
