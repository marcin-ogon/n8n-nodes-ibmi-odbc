{
  "compilerOptions": {
    "target": "ES2020",
    // Use ESNext modules for tooling (Vitest / Vite) to avoid deprecated CJS Vite Node API warning.
    // Production build still emits CommonJS via an override in tsconfig.build.json.
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "."
  }
}
